<section>
    <div class="section-memberlogin">
        <form action="/member/member_login_process" method="post">
            <div class="memberlogin-member">
                <input type="text" class="member-column column-id" name="memberid" id="memberId" placeholder="아이디를 입력해 주세요." value="<%- memberid; %>">
                <input type="password" class="member-column column-password" name="memberpassword" id="memberPassword" placeholder="비밀번호를 입력해 주세요.">
            </div>

            <input type="submit" class="memberlogin-submit" value="로그인">

            <p class="memberlogin-caution"><%- logincaution; %></p>
        </form>
    </div>

    <div class="section-member">
        <a class="member-link link-join" href="#">회원가입</a>
        <a class="member-link link-searchid" href="#">아이디찾기</a>
        <a class="member-link link-searchpassword" href="#">비밀번호찾기</a>
    </div>

    <div class="section-text">
        <p class="text-app">- RK market place -</p>
    </div>
</section>


